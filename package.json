    "deploy": "./scripts/deploy.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.0.0",
    "@google-cloud/functions-framework": "^3.0.0",
    "@notionhq/client": "^2.2.0",
    "@slack/web-api": "^7.0.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3",
    "typescript": "^5.0.0"
  }
}
